.Showcase
  background: #000
  font-family: Track
  color: white
  border-bottom: .5em solid MAIN_COLOR
  background-image: url("../images/background.png")
  background-repeat: no-repeat
  background-attachment: fixed
  background-position: 100% 60%
  padding: 5em 0

.Showcase-title
  padding: 1em 0
  margin: 0
  height: 4.5em
  font-size: 1.5em
  text-transform: uppercase
  animation: 1s ease-out FromTop 

  span
    font-size: .4em

@keyframes FromTop
  from
    transform: translateY(-2em)
    opacity: 0
  to
    transform: translateY(0)
    opacity: 1

